pipeline {
    agent {
        label 'jenkins-agent_1'
    }
    environment {
        REGISTRY = "172.18.0.2:5000"
        IMAGE_NAME = "rocky9-ssh"
        // BUILD_NUMBER = "2" is automatic of Jenkins
    }
    stages {
        stage('Cloning repository GitHub') {
            steps {
                git branch: 'main', url: 'https://github.com/jKurama02/formazione_sou.git'
            }
        }
        stage('Build & Deploy Rocky9') {
            steps {
                sh '''
                    ls -la
                    pwd
                    cd /home/jenkins/workspace/track_3/formazione_cm
                    sudo docker build -f dockerfiles/Dockerfile.rocky9 -t ${REGISTRY}/${IMAGE_NAME}:${BUILD_NUMBER} -t ${REGISTRY}/${IMAGE_NAME}:latest .
                    
                    # Push sia del tag specifico che di latest
                    sudo docker push ${REGISTRY}/${IMAGE_NAME}:${BUILD_NUMBER}
                    sudo docker push ${REGISTRY}/${IMAGE_NAME}:latest
                    ansible-playbook deploy-rocky9.yaml

                    echo "*** image built with tags: ${BUILD_NUMBER}, latest ***"
                '''
            }
        }
        // stage('Clean Workspace') {
        //     steps {
        //         cleanWs()               
        //     }
        // }
    }
}


// i use the Clean Workspace stage for debugging 